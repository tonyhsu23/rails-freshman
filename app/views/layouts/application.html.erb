<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Rails Freshman" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Rails Freshman" %>">
    
    <%= render 'layouts/includes' %>
    <%= csrf_meta_tags %>
    
  </head>
  <body>
    <div id="wrap">

      <header>
        <%= render 'layouts/navigation' %>
      </header>

      <%= render 'layouts/messages' %>
      <%= yield %>
       
     </div>   
  </body>

  <%= render 'layouts/footer' %>

</html>
