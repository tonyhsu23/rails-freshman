<div class="space"></div>
<div class="container">
  <div class="row row-offcanvas row-offcanvas-right">
    <div class="col-xs-12 col-sm-9">
      <div class="row" id="contain">

        <% @links.each do |link| %>
        
          <div class="col-sm-6 col-md-4 grid">
            <div class="thumbnail">
              <font class="label label-success"><%= link.tag %></font>
              <br><%= link_to(image_tag(link.thumbnail, size: "120x120"), link.url, target: "_blank") %>
              <div class="caption">
                <h3><%= link_to(link.title, link.url, target: "_blank") %></h3>
                <p><%= link.content %></p>
                <p align="right">
                  <font color="#163F57"><strong>shared by Tony</strong></font>
                </p> 
              </div>
            </div>
          </div>
        
        <% end %>

      </div><!--/row-->
    </div><!--/span-->

    <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation">

      <%= link_to("Share A Link", new_link_path, class: "btn btn-primary") %>
      <hr>
      
      <div class="list-group">
        <%= link_to("All", links_path, class: "list-group-item active") %>
        
      </div>

      <div class="list-group">
        <%= link_to("Gem", links_path(tag: 'gem'), class: "list-group-item") %>
        <%= link_to("News", links_path(tag: 'news'), class: "list-group-item") %>
        <%= link_to("Teaching", links_path(tag: 'teach'), class: "list-group-item") %>
        <%= link_to("Discussion", links_path(tag: 'discuss'), class: "list-group-item") %>
      </div>
    </div><!--/span-->
  </div><!--/row-->
  
  <div class="text-center">
    <ul class="pagination center">
      <li>
        <a href="#">prev</a>
      </li>
      <li>
        <a href="#">1</a>
      </li>
      <li>
        <a href="#">2</a>
      </li>
      <li>
        <a href="#">3</a>
      </li>
      <li>
        <a href="#">4</a>
      </li>
      <li>
        <a href="#">5</a>
      </li>
      <li>
        <a href="#">next</a>
      </li>
    </ul>
  </div>
</div><!--/.container-->

<script type="text/javascript">

  $(document).ready(function() {
    var $container = $('#contain');
    // initialize Masonry after all images have loaded  
    $container.imagesLoaded( function() {
      $container.masonry({
        // options
        itemSelector: '.grid'
      });
    });
  }); 

  

</script>
